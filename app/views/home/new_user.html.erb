<%= form_tag create_user_path do %>

    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>

    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>

    <%= label_tag :email %>
    <%= text_field_tag :email %>

    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number %>

    <%= label_tag :store_number %>
    <%= text_field_tag :store_number %>

    <%= label_tag 'user information' %>
    <%= file_field_tag :file %>

    <%= submit_tag "create" %>


<% end %>